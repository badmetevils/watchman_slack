{
  "name": "watchman",
  "version": "0.0.0",
  "scripts": {
    "build": "node build.js",
    "lint": "tslint --project \"tsconfig.json\"",
    "start": "node -r module-alias/register ./dist --env=production",
    "start:dev": "nodemon",
    "test": "nodemon --config ./spec/nodemon.json"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@shared": "dist/shared",
    "@osl-slack-bolt": "dist/app",
    "@osl-slack-rtm-app": "dist/rtm",
    "@watchman-hooks": "dist/webhooks",
    "@watchman-rtm": "dist/rtm",
    "@typing": "dist/typings",
    "@osl-slack-web-app": "dist/web"
  },
  "dependencies": {
    "@slack/bolt": "^2.1.1",
    "@slack/rtm-api": "^5.0.5",
    "@slack/web-api": "^5.10.0",
    "command-line-args": "^5.1.1",
    "dotenv": "^8.2.0",
    "module-alias": "^2.2.2",
    "mysql": "^2.18.1",
    "sequelize": "^6.3.3"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/node": "^14.0.20",
    "fs-extra": "^9.0.1",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.6",
    "winston": "^3.3.3"
  }
}
